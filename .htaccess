RewriteEngine On
Options -MultiViews

# Special case: map /admin/ to admin.html
RewriteRule ^admin/?$ /admin.html [L]

# Serve existing files or directories directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Try .html fallback
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# Try folder-style index.html
RewriteCond %{DOCUMENT_ROOT}/$1/index.html -f
RewriteRule ^(.+?)/?$ $1/index.html [L]

# Try Next.js App Router style: /page/index.html
RewriteCond %{DOCUMENT_ROOT}/$1/page/index.html -f
RewriteRule ^(.+?)/?$ $1/page/index.html [L]

# Fallback to root index.html
RewriteRule ^ index.html [L]
