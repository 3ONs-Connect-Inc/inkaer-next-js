RewriteEngine On
Options -MultiViews

# Special case: map /admin/ to admin.html
RewriteRule ^admin/?$ /admin.html [L]

# Serve existing files or directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Try .html fallback for any route
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# Try Next.js-style index.html in subfolders
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/$1/index.html -f
RewriteRule ^(.+?)/?$ $1/index.html [L]

# Special case: App Router "page" directories â†’ index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/$1/page/index.html -f
RewriteRule ^(.+?)/?$ $1/page/index.html [L]

# Fallback to root index.html
RewriteRule ^ index.html [L]
